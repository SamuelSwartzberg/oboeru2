{
  "mdStyle": {
    "dfn": {
      "delimiters": { "start": "»", "end": "«" },
      "replacements": { "start": "<dfn>", "end": "</dfn>" }
    },
    "ipa": {
      "delimiters": { "start": "［", "end": "］" },
      "replacements": { "start": "<span class=\"ipa\">", "end": "</span>" }
    }
  },
  "ebnf": {
    "repetition": {
      "delimiters": {
        "start": "｛",
        "end": "｝"
      },
      "replacements": {
        "start": "<span class=\"ebnf ebnf-repetition\">",
        "end": "</span>"
      }
    },
    "optional": {
      "delimiters": {
        "start": "〖",
        "end": "〗"
      },
      "replacements": {
        "start": "<span class=\"ebnf ebnf-option\">",
        "end": "</span>"
      }
    },
    "alternation": {
      "delimiters": "¦",
      "replacements": "<span class=\"ebnf-metacharacter ebnf-alternation\">|</span>"
    }
  },
  "escapes": {
    "amp": { "delimiters": "＆", "replacements": "&amp;" },
    "lt": { "delimiters": "‹", "replacements": "&lt;" },
    "gt": { "delimiters": "›", "replacements": "&gt;" },
    "7c": { "delimiters": "｜", "replacements": "|" }
  }
}
